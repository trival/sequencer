{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "allowJs": true,
    "types": ["vite/client"],
    "paths": { "@/*": ["./src/*"] },

    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true
  }
}
