{
  "name": "trival-sequencer-server",
  "private": true,
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "types": "tsc --noEmit",
    "migration:run": "cd src/db/ && drizzle-kit generate",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --env-file=\".env.test\" --watch",
    "test:server": "DEBUG=express-session NODE_ENV=test bun --watch src/index.ts",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" index.ts"
  },
  "dependencies": {
    "@trpc/server": "^11.0.0-rc.467",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.32.1",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trpc/client": "^11.0.0-rc.467",
    "@types/bun": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.14.12",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "module": "index.ts",
  "type": "module"
}
